{
  "scripts": {
    "sass:watch": "sass --watch scss/style.scss css/style.css",
    "lint:html": "npx linthtml ./*.html",
    "lint:sass": "stylelint --fix \"scss/**/*.scss\" --custom-syntax postcss-scss",
    "lint": "npm run lint:sass && npm run lint:html",
    "prepare": "husky install",
    "server": "nodemon server.js",
		"start": "browser-sync start --config bs-config.js && npm run sass:watch"
  },
  "devDependencies": {
    "@linthtml/linthtml": "^0.8.6",
    "browser-sync": "^2.27.9",
    "connect-livereload": "^0.6.1",
    "express": "^4.18.1",
    "husky": "^7.0.4",
    "livereload": "^0.9.3",
    "nodemon": "^2.0.16",
    "path": "^0.12.7",
    "postcss-scss": "^4.0.4",
    "stylelint": "^14.7.1",
    "stylelint-config-standard": "^25.0.0"
  }
}
